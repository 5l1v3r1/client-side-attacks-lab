<!DOCTYPE html>
<html>

<head>
  <title>Weak Company</title>
  <%- include('partials/headassets') %>
</head>

<body>
  <%- include('partials/topnav') %>
    Hello
    <%= user.username %>
      <hr />
      <div class="container">
        <div class="row">
          <div class="span8 offset2">
            <form method="POST" action="/transfer">
              <fieldset>
                <select name="currency">
                  <%- !selectedCurrency ? '<option value="">--Select Currency--</option>' : '' %>
                  <option value="btc" <%- selectedCurrency === 'btc' ? 'selected' : '' %>>BTC &ndash; <%= user.balance.btc %></option>
                  <option value="ltc" <%- selectedCurrency === 'ltc' ? 'selected' : '' %>>LTC &ndash; <%= user.balance.ltc %></option>
                </select><br />
                <input name="amount" type="text" value="" placeholder="0.00"><br />
                <select name="recipient">
                  <option value="">--Select Recipient--</option>
                  <% for(let i = 0; i < friends.length; i++) { %>
                    <option value="<%= friends[i].id %>"><%= friends[i].username %></option>
                  <% } %>
                </select><br />
                <button type="submit" class="btn btn-primary">Submit</button>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
      <%- include('partials/footer') %>
</body>

</html>